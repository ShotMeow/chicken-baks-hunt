{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["es6", "dom", "es2016", "es2017"],
		"jsx": "react",
		"module": "ESNext",
		"moduleResolution": "node",
		"declaration": true,
		"sourceMap": true,
		"declarationDir": "dist",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
